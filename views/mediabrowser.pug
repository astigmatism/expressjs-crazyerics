doctype html
html
  head
    script.
        var masterFile = !{masterFile};
        var system = '!{system}';
        var paths = !{paths};
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js')
    script(src='/javascripts/isotope.min.js')
    script(src='/javascripts/dev/mediabrowser.js', type='text/javascript')
    script(src='/javascripts/imagesloaded.min.js')
    script(src='/javascripts/dropzone.js', type='text/javascript')
    link(rel='stylesheet', href='/stylesheets/dropzone.css')
    link(rel='stylesheet', href='/stylesheets/dev/mediabrowser.css')
    link(rel='stylesheet', type='text/css', href='http://fonts.googleapis.com/css?family=Open+Sans|Poppins|Kanit')
  body
    div#header
      div#searchwrapper
        | Search: 
        input#search
      div#filterwrapper
        | Filter By Rank:
        input(type="checkbox")#hidered 
        | Hide Red
        input(type="checkbox")#hideyellow
        | Hide Yellow
        input(type="checkbox")#hidegreen
        | Hide Green
    ul#list
    ul#template
      li(class="item")
        div(class="head")
          img
          div(class="rankflag")
          h2
          div(class="boxfront count")
        div(class="slider")
          ul(class="panels")
            li(class="panel info")
              h3 Game Info
              ul
              p This is the entry from the masterfile. Edit as necessary (this will be overwritten the next time the masterfile is generated however)
              textarea
            li(class="panel boxfront")
              h3 Media Box Front
              img
              p(class="dim")
              input(type="button", class="boxfrontdelete", value="Delete")
              input(type="button", class="googlesearch", value="Google")
              p You can upload a replacement file here. This is overwrite the existing art:
              div(class="dropzone")
            li(class="panel sqvideo")