extends layout

block content
    div#searchform
        select(title="Filter your search to a specific system")
            option(value='all') All Consoles
            option(value='nes') Nintendo
            option(value='snes') Super Nintendo
            option(value='gba') Game Boy Advance
            option(value='gb') Game Boy
            option(value='gen') Genesis
            option(value='gg') Game Gear
            option(value='sms') Master System
        div
            input(class="tooltip" title="Begin typing a name to see a list of results. Select a system for foreign or unofficial titles." type='text', name='search', data-hotkey='q', placeholder='Search')

    div(class="rel")
        
        div#startmessage(class="darkgrad")
            div#startfirst(class="centered hide")
                h2 Welcome!
                p Get started by searching for a game or selecting a suggestion below
            div#startplayed(class="centered hide")
                h2 Welcome Back
                ul
                p Continue playing, search, or select a suggestion below (or #[a(href="javascript:crazyerics.clearHistory()") clear] your history)

        div#emulatorwrapper
            div#emulatorcanvas
            div#emulatormessagewrapper This is a test message
            div#emulatorcontrolswrapper
                ul(class="fl")
                    li(class="fullscreen")
                        img(class="tooltip",src="/images/fullscreen.png",title="Enter Fullscreen")
                    li(class="mute")
                        img(class="tooltip",src="/images/mute.png",title="Toggle Mute (F9)")
                    li(class="pause")
                        img(class="tooltip",src="/images/pause.png",title="Pause Game (P)")
                    li(class="fastforward")
                        img(class="tooltip",src="/images/fastforward.png",title="Toggle Fast Forward (Spacebar)")
                    li(class="reset")
                        img(class="tooltip",src="/images/reset.png",title="Reset System (H)")
                ul(class="fr")
                    li(class="savestate")
                        img(class="tooltip",src="/images/savestate.png",title="Save State (F2)")
                    li(class="decrementslot")
                        img(class="tooltip",src="/images/decrementslot.png",title="Decrement Save Slot (F6)")
                    li(class="incrementslot")
                        img(class="tooltip",src="/images/incrementslot.png",title="Increment Save Slot (F7)")
                    li(class="loadstate")
                        img(class="tooltip",src="/images/loadstate.png",title="Load State (F4)")
                    
            textarea#output(rows="8")
        
            div#emulatorwrapperoverlay
                div
                    h2 Game Paused
                    p Click here to continue

        div#gamedetailsbackground
            div#gamedetailswrapper(class="darkgrad")
                div#gamedetailstable
                    div#gamedetailsboxfront
                    div#gamedetailscontent
                        div#gametitlewrapper
                            span#gametitle
                        div#controlsslider(class="slidingpanel")
                        ul#gamecontrolslist(class="closed")
                            li(class="controls", data-click-state="0")
                                img(class="tooltip",src="/images/gamepad.png", title="View Controls")

        div#gameloadingoverlay(class="darkgrad")
            div#gameloadingoverlaytable
                div#gameloadingoverlaycell
                    div#gameloadingoverlaycontent(class="close")
                        h2 Now Loading
                        div#gameloadingoverlaycontentimage
                            img(class="tada")
                        p#gameloadingname

    div#suggestionswrapper
        div(class="column")
        div(class="column")
        div(class="column")
        div(class="column")
        div(class="column")

    div#loading
        div(class="loadingicon")
        div(class="loadingtext")