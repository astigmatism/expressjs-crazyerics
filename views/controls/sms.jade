style.
	#wrapper {
		position: relative;
		height: 170px;
		width: 470px;
	}
	#wrapper ul.right {
		margin: 15px;
		padding: 0;
		float: right;
	}
	#wrapper ul.left {
		margin: 15px;
		padding: 0;
		float: left;
	}
	#wrapper ul.right li {
		list-style: none;
		text-align: right;
	}
	#wrapper ul.left li {
		list-style: none;
		text-align: left;
	}
div#wrapper
	ul(class="right")
		li Save State: F2
		li Load State: F4
		li Increment State: F6
		li Decrement State: F7
		li Pause: P
		li FF: Spacebar
		li Frame Skip: K
		li Reset: H
	ul(class="left")
		li D-pad: Arrows
		li Button 1/Start: Z
		li Button 2: X
